	<body>
		<header>
			<h1>Home</h1>
			{{#if authorised}}
				<a href="/logout">Log out</a>
                <a href = "/mortgage/add">Add</a>
                
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
	<main>
        <body>
            
    <div id="loancal">
        <div>
            
        <h2>Loan Calculator</h2>
            </div>
       <div> <p>Loan Amount: £ <input id="amount" type="number" min="50" step = "100" max="300000" onclick="calculate()"></p>
        </div>
              <div> <p>Months to Pay: <input id="months" type="number" min="5" max="30"  step="1" onclick="calculate()"></p>
                  <div>
                            <details>
    <summary>Note*</summary>
    compound interest rate = 3%.
</details>
                  </div>
    <div>
        
        <button onclick="calculate()">GO</button> <hr><p id="res"></p><hr>
        
                  </div>
         <div>

                  </div>         
        </div>
        </div>
            
</body>
        <div class = "centre">
                
        </div>
<div>
    {{#each records}}
    
        <div id = "row"class="row">
  <div class="column" style="background-color:#4285F4;">
    <h2>Amount (£)</h2>
    <p>{{this.amount}}</p>
  </div>
  <div class="column" style="background-color:#4285F4;">
    <h2>Years</h2>
    <p id = "dyears">{{this.years}}</p>
  </div>
  <div class="column" style="background-color:#4285F4;">
    <h2>Deposit (£)</h2>
    <p id = "ddeposit">{{this.deposit}}</p>
  </div>
  <div class="column" style="background-color:#4285F4;">
    <h2>monthly payment(£)</h2>
    <p >{{this.mp}}</p>
      
  </div>
      <div class="column" style="background-color:#4285F4;">
    <h2>Compound interest</h2>
    <p id = "dres"> {{this.ci}}</p>
             
              
  </div>
            <hr>
 <button onclick="delete_row()">Delete</button>
    </div>
    {{/each}}
        </div>			
	</main>
